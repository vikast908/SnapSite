{
  "manifest_version": 3,
  "name": "GetInspire",
  "version": "2.0.0",
  "description": "Save web pages and entire sites as offline ZIP files",

  "permissions": [
    "activeTab",
    "scripting",
    "downloads",
    "storage",
    "tabs",
    "pageCapture"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "background": {
    "service_worker": "src/background.js"
  },

  "action": {
    "default_popup": "src/popup.html",
    "default_title": "GetInspire"
  },

  "icons": {
    "16": "assets/icons/16.png",
    "32": "assets/icons/32.png",
    "48": "assets/icons/48.png",
    "128": "assets/icons/128.png"
  }
}