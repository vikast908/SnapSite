{
  "manifest_version": 3,
  "name": "SnapSite",
  "version": "1.0",
  "description": "Save webpages offline with full source code & assets. Works on Chrome, Firefox, Edge, Safari, Opera, and Brave.",

  "permissions": [
    "activeTab",
    "scripting",
    "downloads",
    "storage",
    "tabs"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },

  "action": {
    "default_popup": "src/popup.html",
    "default_title": "SnapSite - Save pages offline",
    "default_icon": {
      "16": "assets/icons/16.png",
      "32": "assets/icons/32.png",
      "48": "assets/icons/48.png",
      "128": "assets/icons/128.png"
    }
  },

  "icons": {
    "16": "assets/icons/16.png",
    "32": "assets/icons/32.png",
    "48": "assets/icons/48.png",
    "128": "assets/icons/128.png"
  },

  "web_accessible_resources": [{
    "resources": ["src/*.js", "lib/*.js", "assets/*"],
    "matches": ["<all_urls>"]
  }],

  "browser_specific_settings": {
    "gecko": {
      "id": "snapsite@example.com",
      "strict_min_version": "109.0"
    },
    "safari": {
      "strict_min_version": "15.4"
    }
  },

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
